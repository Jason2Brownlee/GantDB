<div id="login_box">
	<% form_tag session_path do %>
	<div>
		<div id="field_label">
			login
		</div>
		<%= text_field_tag 'login', @login  %>
	</div>
	<div>
		<div id="field_label">
			password
		</div>
		<%= password_field_tag 'password', "" %>
	</div>
	<div id="field_remember_me">
		<%= check_box_tag 'remember_me' %> remember me | 
		<%= link_to 'Forgot password?', forgot_password_path %>
	</div>
	<div>
		<%= submit_tag 'Sign In' %> or <%= link_to "join", new_user_path %>
	</div>	
	<% end %>
</div>
